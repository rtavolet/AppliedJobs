@model AppliedJobs.Models.JobApp

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Job Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle)
        </dd>
        <dt class="col-sm-2">
            Company Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dt class="col-sm-2">
            Applied Through a Recruiter?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.isRecruiter)
        </dd>
        <dt class="col-sm-2">
            Job Link
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobLink)
        </dd>
        <dt class="col-sm-2">
            Date Applied
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateApplied)
        </dd>
        <dt class="col-sm-2">
            Interview?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Interview)
        </dd>
        <dt class="col-sm-2">
            Rejected?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rejected)
        </dd>
        <dt class="col-sm-2">
            Notes
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
